{
  "name": "server",
  "scripts": {
    "start": "nodemon -e ts,graphql -x ts-node src/index.ts",
    "debug": "nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "build": "rimraf dist && tsc",
    "prisma": "prisma"
  },
  "dependencies": {
    "apollo-link-http": "^1.5.14",
    "apollo-server": "^2.4.8",
    "apollo-server-env": "^2.2.0",
    "apollo-server-express": "^2.4.8",
    "bcryptjs": "2.4.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "graphql-middleware": "^3.0.2",
    "graphql-shield": "^5.3.1",
    "graphql-tools": "^4.0.4",
    "jsonwebtoken": "8.5.1",
    "lodash": "^4.17.11",
    "prisma-client-lib": "^1.28.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "10.12.27",
    "apollo": "^2.6.2",
    "dotenv-cli": "1.4.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "1.18.10",
    "prettier": "^1.16.4",
    "prisma": "^1.28.5",
    "rimraf": "2.6.3",
    "ts-node": "7.0.1",
    "typescript": "3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
